{% extends "lBase.html.twig" %}

{% block title %}Tous les articles{% endblock %}

{% block content %}
    <div class="row">
        <div class="cell-12">
            <h1 class="align-center">Liste des articles</h1>
        </div>
    </div>
    <div class="row-col-s">
            {% if articles|length > 0 %}
                {% for article in articles %}
                    <a class="cell-4 c6-m padd-15 box-shad-2px align-center hvr-bob"
                       href="index.php?o=article&a=describe&id={{ article.id }}">{{ article.title }}</a>
                {% endfor %}
            {% else %}
                <div class='cell-12'><p class='msg-warning'>Aucun article trouv√© !</p></div>
            {% endif %}
    </div>
{% endblock %}
